{
  "name": "string-instrument",
  "version": "0.0.3",
  "description": "A little library for working with strings",
  "homepage": "https://github.com/chrisalley/string-instrument",
  "keywords": [
    "string",
    "strings",
    "slug",
    "camelcase",
    "hyphen seperated",
    "underscore seperated"
  ],
  "license": "MIT",
  "author": "Chris Alley",
  "type": "module",
  "repository": {
    "type": "git",
    "url": "https://github.com/chrisalley/string-instrument"
  },
  "main": "dist/string-instrument.js",
  "source": "src/index.ts",
  "files": [
    "dist/string-instrument.js"
  ],
  "engines": {
    "node": ">=20"
  },
  "scripts": {
    "dev": "vite",
    "build": "tsc && vite build",
    "preview": "vite preview",
    "coverage": "vitest run --coverage",
    "test": "vitest",
    "test:ui": "vitest --ui",
    "lint": "eslint src",
    "lint:fix": "eslint src --fix",
    "prettier": "prettier --check .",
    "prettier:fix": "prettier --write .",
    "types": "tsc",
    "prepare": "husky",
    "commitlint": "commitlint --edit"
  },
  "devDependencies": {
    "@commitlint/cli": "^19.5.0",
    "@commitlint/config-conventional": "^19.5.0",
    "@commitlint/types": "^19.5.0",
    "@eslint/js": "^9.11.1",
    "@vitest/coverage-v8": "^0.34.6",
    "eslint": "^9.11.1",
    "eslint-config-prettier": "^9.1.0",
    "globals": "^15.9.0",
    "husky": "^9.1.6",
    "prettier": "^3.3.3",
    "typescript": "^5.6.2",
    "typescript-eslint": "^8.7.0",
    "vite": "^6.0.3",
    "vitest": "^0.34.6"
  }
}
