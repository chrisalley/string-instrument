{
  "name": "string-instrument",
  "version": "0.0.3",
  "description": "A little library for working with strings",
  "homepage": "https://github.com/chrisalley/string-instrument",
  "keywords": [
    "string",
    "strings",
    "slug",
    "camelcase",
    "hyphen seperated",
    "underscore seperated"
  ],
  "license": "MIT",
  "author": "Chris Alley",
  "type": "module",
  "repository": {
    "type": "git",
    "url": "https://github.com/chrisalley/string-instrument"
  },
  "main": "dist/string-instrument.js",
  "source": "src/index.ts",
  "files": [
    "dist/string-instrument.js"
  ],
  "engines": {
    "node": ">=18"
  },
  "scripts": {
    "dev": "vite",
    "build": "tsc && vite build",
    "preview": "vite preview",
    "coverage": "vitest run --coverage",
    "test": "vitest",
    "test:ui": "vitest --ui",
    "prettier": "prettier --check .",
    "prettier:fix": "prettier --write .",
    "types": "tsc",
    "prepare": "husky",
    "commitlint": "commitlint --edit"
  },
  "devDependencies": {
    "@commitlint/cli": "^19.4.0",
    "@commitlint/config-conventional": "^19.2.2",
    "@commitlint/types": "^19.0.3",
    "husky": "^9.1.4",
    "prettier": "^3.2.5",
    "typescript": "^5.4.4",
    "vite": "^5.2.8",
    "vitest": "^0.34.6"
  }
}
